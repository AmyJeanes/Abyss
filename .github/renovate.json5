{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeDigest",
    ":automergeMinor"
  ],
  "automergeType": "branch",
  "pinDigest": {
    "automerge": true
  },
  "packageRules": [
    {
      // Angular limits TypeScript versions so we can't update to latest major/minor automatically
      "matchDepNames": [
        "typescript",
        "@typescript-eslint/*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    },
    {
      // Always want to use latest version
      "matchDepNames": [
        "ghcr.io/mattjeanes/abyss/abyss.web"
      ],
      "matchUpdateTypes": [
        "pinDigest"
      ],
      "enabled": false
    }
  ]
}
